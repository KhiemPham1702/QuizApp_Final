<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rank"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:clipToOutline="true"
android:background="@drawable/set_pass">

    <!-- TODO: Update blank fragment layout -->
    <View
        android:id="@+id/ellipse_12"
        android:layout_width="157dp"
        android:layout_height="157dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="89dp"
        android:layout_marginTop="-80dp"
        android:background="@drawable/ellipse_5" />

    <View
        android:id="@+id/ellipse_8"
        android:layout_width="84dp"
        android:layout_height="81dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="282dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/ellipse_8" />
    <View
        android:id="@+id/group_7"
        android:layout_width="383dp"
        android:layout_height="409dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="11dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="126dp"
        android:background="@drawable/ranking"
        />

    <View
        android:id="@+id/rectangle_2"
        android:layout_width="match_parent"
        android:layout_height="349dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/vector4" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView_3"
        android:layout_width="375dp"
        android:layout_height="257dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="100dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_progress="-1000"

        app:lottie_rawRes="@raw/popper"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/ranking"
        android:layout_width="275dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="421dp"
        android:fontFamily="@font/baloo_bhai"
        android:gravity="top"
        android:text="@string/ranking"
        android:textAppearance="@style/ranking" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="560dp"/>

    <View
        android:id="@+id/crown"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/crown_pic" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/top1_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ellipse_9"
        android:src="@drawable/users" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/top2_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="149dp"
        android:background="@drawable/ellipse_9"
        android:src="@drawable/users" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/top3_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="213dp"
        android:background="@drawable/ellipse_9"
        android:src="@drawable/users" />

    <TextView
        android:id="@+id/top1"
        android:layout_width="186dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/baloo_bhai"
        android:gravity="center_horizontal|top"
        android:text="@string/nickname4"
        android:textAppearance="@style/nickname1" />

    <TextView
        android:id="@+id/top2"
        android:layout_width="186dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-25dp"
        android:layout_marginTop="240dp"
        android:fontFamily="@font/baloo_bhai"
        android:gravity="center_horizontal|top"
        android:text="@string/nickname4"
        android:textAppearance="@style/nickname2" />

    <TextView
        android:id="@+id/top3"
        android:layout_width="186dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/baloo_bhai"
        android:gravity="center_horizontal|top"
        android:text="@string/nickname4"
        android:textAppearance="@style/nickname2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ranktable"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:layout_marginTop="500dp"
        tools:listitem="@layout/iteam_rank" />
</RelativeLayout>