<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/dialog_custom1"
        android:fontFamily="@font/baloo_bhai"
        android:gravity="center"
        android:text="Change Info"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout  android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Please enter your new infomation"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/changeInfo"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/dialog_custom2"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center_vertical"
            android:hint="New info"
            android:paddingLeft="25dp"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/dialog_custom3"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/submit"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/dialog_custom3"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="Submit"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>