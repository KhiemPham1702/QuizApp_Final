<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Quiz_layout"
    android:id="@+id/quiz_app"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/quiz">

    <TextView
        android:id="@+id/next"
        android:layout_width="139dp"
        android:layout_height="51dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="639dp"
        android:background="@drawable/rec_next"
        android:fontFamily="@font/baloo_bhai"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:fontFamily="@font/baloo_bhai"
        android:id="@+id/submit"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="61dp"
        android:background="@drawable/rec_next"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/rectangle_11"
        android:layout_width="414dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-24dp"
        android:background="@drawable/rectangle18" />



    <View
        android:layout_width="375dp"
        android:layout_height="500dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/quiz_custom" />
    <TextView
        android:fontFamily="@font/baloo_bhai"
        android:id="@+id/question"
        android:layout_width="354dp"
        android:layout_height="216dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="131dp"
        android:background="@drawable/rec_question"
        android:gravity="center"
        android:text="Question..?"
        android:textColor="@color/black"
        android:textSize="30dp" />
    <TextView
        android:fontFamily="@font/baloo_bhai"
        android:id="@+id/option1"
        android:layout_width="172dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="399dp"
        android:background="@drawable/rec_answer"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Answer"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/option2"

        android:layout_width="172dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="202dp"
        android:layout_marginTop="399dp"
        android:background="@drawable/rec_answer"
        android:fontFamily="@font/baloo_bhai"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Answer"

        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/option3"

        android:layout_width="172dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="509dp"
        android:background="@drawable/rec_answer"
        android:fontFamily="@font/baloo_bhai"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Answer"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/option4"

        android:layout_width="172dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="202dp"
        android:layout_marginTop="511dp"
        android:background="@drawable/rec_answer"
        android:fontFamily="@font/baloo_bhai"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Answer"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="297dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/baloo_bhai"
        android:gravity="top"
        android:text="24"
        android:textAppearance="@style/english"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/course"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/baloo_bhai"
        android:gravity="center"
        android:onClick="onClick"
        android:text="Quizz"
        android:textAppearance="@style/english" />

    <TextView
        android:id="@+id/count"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="69dp"
        android:gravity="top"
        android:text="1/10"
        android:textAppearance="@style/question_1_"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/undo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="5dp"
        android:onClick="onClick"
        android:src="@drawable/previous1"

        />

</RelativeLayout>